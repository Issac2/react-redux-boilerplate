{
  "name": "react-redux-boilerplate",
  "version": "2.0.0-beta.1",
  "description": "React Redux Boilerplate",
  "homepage": "https://github.com/xuqingkuang/react-redux-boilerplate",
  "author": {
    "name": "XQ Kuang",
    "email": "x@kxq.io"
  },
  "main": "dist/bundle.js",
  "keywords": [
    "typescript",
    "react",
    "redux",
    "jest",
    "scss",
    "sass",
    "boilerplate",
    "webpack-dev-server",
    "yarn",
    "hmr"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xuqingkuang/react-redux-boilerplate"
  },
  "scripts": {
    "start": "webpack-dev-server",
    "build": "cross-env NODE_ENV=production webpack --display-error-details --config webpack-production.config.js",
    "clean": "rimraf dist",
    "lint": "tslint --force \"src/**/*.ts*\" && sass-lint -v -q src/**/*.scss",
    "test": "jest --no-cache",
    "ghpages": "minify assets/index.html > dist/index.html && gh-pages -d dist"
  },
  "jest": {
    "collectCoverage": true,
    "transform": {
      ".*": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "testRegex": "(/__tests__/.*|\\.(test))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/file-mock.js",
      "^.+\\.(css|scss)$": "identity-obj-proxy"
    }
  },
  "engines": {
    "npm": ">=3.10.0",
    "node": ">=6.9.0",
    "yarn": ">=0.16.0"
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.0.36",
    "@types/core-js": "^0.9.35",
    "@types/node": "^0.0.2",
    "@types/react": "^0.14.54",
    "@types/react-addons-test-utils": "^0.14.15",
    "@types/react-dom": "^0.14.19",
    "@types/react-hot-loader": "^3.0.0",
    "@types/react-redux": "^4.4.35",
    "@types/react-router": "^2.0.41",
    "@types/react-router-redux": "^4.0.35",
    "@types/redux": "^3.6.0",
    "codecov": "^1.0.1",
    "copy-webpack-plugin": "^4.0.0",
    "cross-env": "^3.1.3",
    "css-loader": "^0.26.1",
    "exports-loader": "^0.6.3",
    "file-loader": "^0.9.0",
    "gh-pages": "^0.12.0",
    "identity-obj-proxy": "^3.0.0",
    "imports-loader": "^0.7.0",
    "jest-cli": "^17.0.3",
    "minify": "^2.0.12",
    "react-addons-test-utils": "^15.3.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "rimraf": "^2.5.4",
    "sass-lint": "^1.9.1",
    "sass-loader": "^4.0.2",
    "sasslint-webpack-plugin": "^1.0.4",
    "source-map-loader": "^0.1.5",
    "style-loader": "^0.13.1",
    "ts-jest": "^17.0.3",
    "ts-loader": "^1.3.1",
    "tslib": "^1.2.0",
    "tslint": "^4.0.2",
    "tslint-loader": "^3.3.0",
    "typescript": "^2.1.4",
    "url-loader": "^0.5.7",
    "webpack": "^2.1.0-beta.26",
    "webpack-dev-server": "^2.1.0-beta.12",
    "webpack-polyfill-service-plugin": "0.0.4"
  }
}
